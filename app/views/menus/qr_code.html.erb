<div class="w-full" >
  <h1 class="text-2xl text-center w-full p-4 font-bold" >Tables</h1>
  <div class="flex flex-wrap w-full" >
    <% @codes.each do |table| %>
    <div class="w-1/3" >
      <div class="flex justify-center" >
      <%= table[:qr].as_svg(
            color:           "000",
            shape_rendering: "crispEdges",
            module_size:     5,
            standalone:      true,
            use_path:        true
          ).html_safe %>
      </div>
      <div class="text-center font-semibold m-2" >
        <%= table[:table].name %>
      </div>
    </div>
    <% end %>
  </div>
</div>