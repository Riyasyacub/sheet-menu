<%= render 'layouts/flash' %>
<style>

    .error {
        background: rgba(224, 88, 87, 0.84);
    }

    .alert {
        background: rgba(224, 88, 87, 0.84);
    }

    .success {
        background: #4aa44b;
    }

    .warning {
        background: rgba(224, 88, 87, 0.84);
    }

    .notice {
        background: rgba(85, 134, 239, 0.84);
    }

    .visible {
        animation: movein 0.5s ease forwards, moveout 0.5s 4s ease forwards;
        color: white;
        border-radius: 0.375rem;
        font-size: 18px;
        display: flex;
        justify-content: center;
        align-items: center;
        position: fixed;
        bottom: 20px;
        left: 0;
        padding: 0.5rem 1rem 0.5rem 1rem;
        z-index: 200;
    }

    /*#notif {
      left: 10px;
      opacity: 0;
    }*/

    @keyframes movein {
        from {
            /*right: -100%;*/
            bottom: -100%;
        }
        to {
            /*right: 10px;*/
            bottom: 10px;
        }
    }

    @keyframes moveout {
        from {
            /*right: 10px;*/
            bottom: 10px;
        }
        to {
            /*right: -100%;*/
            bottom: -100%;
        }
    }
</style>