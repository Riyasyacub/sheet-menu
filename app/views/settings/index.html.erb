<main class="max-w-lg mx-auto pt-10 pb-12 px-4 lg:pb-16">
  <div class="mb-8">
    <%= form_with model: current_user, scope: :settings, method: :put, url: settings_path do |f| %>
      <div class="space-y-6">
        <div>
          <h1 class="text-lg leading-6 font-medium text-gray-900">User Settings</h1>
          <p class="mt-1 text-sm text-gray-500">Update your settings below.</p>
        </div>

        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.email_field :email, class: "block w-full shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.password_field :password, class: "block w-full shadow-sm focus:ring-green-500 focus:border-green-500 sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>

        <div class="flex justify-end">
          <%= f.submit "Update Settings", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 cursor-pointer" %>
        </div>
      </div>
    <% end %></div>

  <hr>

